<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
    android:orientation="horizontal" >
    
	<TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

	<EditText
	    android:id="@+id/accountNameNew"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/accountName"
	    android:ems="10"
	    android:inputType="textCapWords" />

	<TextView
        android:id="@+id/accountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"        
        android:text="@string/account_type"
	    android:layout_below="@+id/accountNameNew"        
        android:textAppearance="?android:attr/textAppearanceLarge"/>	
        
    <Spinner
        android:id="@+id/accountTypeChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/accountType"            
        android:entries="@array/account_types"
        android:prompt="@string/account_type_prompt" />	
			
	<TextView
        android:id="@+id/accountBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/account_balance"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/accountTypeChoice" />
	
	<EditText
	    android:id="@+id/accountBalanceNew"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/accountBalance"
	    android:ems="10"
	    android:inputType="number|numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/accountIncludeInBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/accountBalanceNew"
        android:layout_marginTop="14dp"
        android:text="@string/account_include_balance"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/accountIncludeInBalanceCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/accountIncludeInBalance"
        android:layout_alignBottom="@+id/accountIncludeInBalance"
        android:layout_alignRight="@+id/accountBalanceNew"
        android:checked="true" />

    <TextView
        android:id="@+id/accountIncludeInReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/accountIncludeInBalance"
        android:layout_marginTop="14dp"
        android:text="@string/account_include_reports"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/accountIncludeInReportsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/accountIncludeInReports"
        android:layout_alignBottom="@+id/accountIncludeInReports"
        android:layout_alignRight="@+id/accountBalanceNew"
        android:checked="true" />
    		
     <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_save"
        android:layout_below="@+id/accountIncludeInReports" />

     <Button
         android:id="@+id/buttonCancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/accountIncludeInReportsCheck"
         android:layout_toRightOf="@+id/buttonSave"
         android:text="@string/account_cancel" />
    
</RelativeLayout>
