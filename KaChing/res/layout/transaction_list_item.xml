<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/transaction_catImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:contentDescription="@string/account_icon"
        />
    <TextView
        android:id="@+id/transaction_catTxt"
        android:layout_width="wrap_content"   
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/transaction_catImg"
        android:gravity="left"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/transaction_catTxt"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="15sp"
        />    
    <TextView
        android:id="@+id/transaction_subCatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/transaction_catImg"
        android:layout_below="@+id/transaction_catTxt"
        android:gravity="right"
        android:textSize="15sp"
        />   
    <TextView
        android:id="@+id/transaction_accTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/transaction_subCatTxt"
        android:layout_below="@+id/transaction_amount"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="15sp"
        />           
</RelativeLayout>
