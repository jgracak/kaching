<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/pozadina</item>
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.MyActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/actionbar_color</item>     
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>   
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="Divider">
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">1dp</item>
    	<item name="android:background">?android:attr/listDivider</item>
	</style>
    
    <style name="MyAppCompatDialogTheme" parent="AppTheme">
	    <item name="android:windowIsFloating">false</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
	    <item name="android:windowActionModeOverlay">true</item>
	    <item name="android:windowIsTranslucent">true</item>
	</style>
	
	<style name="PopupTheme" parent="android:Theme.Holo.Light.Dialog">
	    <item name="android:windowIsFloating">false</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
	    <item name="android:windowActionModeOverlay">true</item>
	    <item name="android:windowIsTranslucent">true</item>
	</style>
	
	<style name="CustomStyleUpAsHome" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
    </style>
    
	<style name="CustomStyleUpAsHome" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_sliding_menu</item>
    </style>	
	
</resources>